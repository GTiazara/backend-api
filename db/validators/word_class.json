{
  "$jsonSchema": {
    "bsonType": "object",
    "required": ["categoryName", "words"],
    "properties": {
      "categoryName": {
        "bsonType": "string",
        "description": "Name of the word category/class"
      },
      "words": {
        "bsonType": "array",
        "minItems": 1,
        "maxItems": 20,
        "uniqueItems": true,
        "items": { "bsonType": "string" },
        "description": "Array of words belonging to this category (1..20 unique strings)"
      }
    }
  }
}
